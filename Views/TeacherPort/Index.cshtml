@model IEnumerable<BullDoghs.Models.tbCourseSection>

@{
    ViewData["Title"] = "Index";
    var identity = Context.User.Identity;
}

<h1>Course Management Panel for Teacher: @identity?.Name</h1>

<p>
    <a asp-action="Create">Create A New Course Session</a>
</p>
<table class="table">
    <thead>
        <tr style="text-align: center">
            <th>Teacher ID</th>
            <th>Teacher Name</th>
            <th>Course</th>
            <th>Student Number</th>
            <th>Classroom</th>
            <th>Class Day</th>
            <th>Class Time</th>
            <th>Teacher Email</th>
            <th>Teacher Phone</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="text-align: center">
            <td>
                @Html.DisplayFor(modelItem => item.TeacherID_FKNavigation.TeacherID_PK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherID_FKNavigation.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle_FKNavigation.CourseTitle_PK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendentNumber)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassRoom)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_time)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TeacherID_FKNavigation.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TeacherID_FKNavigation.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" Class="text-danger" asp-route-id="@item.CourseSectionID_PK">Update</a> |
                    <a asp-action="Details" Class="text-danger" asp-route-id="@item.CourseSectionID_PK">Details</a> |
                    <a asp-action="Delete" Class="text-danger" asp-route-id="@item.CourseSectionID_PK">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
