@model BullDoghs.Models.tbCourseSection

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this course session?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseTitle_FKNavigation.CourseTitle_PK)
        </dd>
        <dt class="col-sm-2">
            Teacher's Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeacherID_FKNavigation.TeacherName)
        </dd>
        <dt class="col-sm-2">
            Assigned classroom:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassRoom)
        </dd>
        <dt class = "col-sm-2">
            Class day:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course_day)
        </dd>
        <dt class = "col-sm-2">
            Class time:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course_time)
        </dd>
        <dt class = "col-sm-2">
            Student number:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AttendentNumber)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseSectionID_PK" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
